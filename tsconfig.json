{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "target": "es5",
    "module": "commonjs",
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "lib": ["esnext", "dom"],
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
